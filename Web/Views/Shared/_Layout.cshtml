<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
 <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Ferit ARIBULAN", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Çıkış", "Logout", "Home", null, null)</li>
                            <li></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div><!--/.container-fluid -->
        </nav>
    </header>
   
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <div class="row">
                    <div class="navbar navbar-default text-center" style="line-height: 46px;">
                         Menü
                    </div>
                    <div class="navbar navbar-default text-center">
                        <div>
                            <ul class="list-unstyled">
                                <li>@Html.ActionLink("Sepet", "Index", "Cart", null, null)</li>
                                <li>@Html.ActionLink("Ödemeler", "Index", "Credit", null, null)</li>
                                <li>@Html.ActionLink("Ürünler", "Index", "Product", null, null)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <footer>
        <div class="container">
            <div class="row">
                &copy; 2016 - Ferit ARIBULAN
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("js", false)
</body>
</html>